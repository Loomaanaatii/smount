[Unit]
Description=MergerFS for Sharedrive Mount
After=network-online.target

[Service]
Type=forking
GuessMainPID=no
ExecStart=/usr/bin/mergerfs \
  -o category.action=all,category.create=ff  \
  -o allow_other,nonempty,dropcacheonclose=true, \
  -o statfs_ignore=ro,use_ino,umask=0002,noatime \
  -o async_read=false,cache.files=partial,xattr=nosys \
  ${myrwmdir}=RW:${myromdir}=NC ${mymdir}
ExecStop=/bin/fusermount -u ${mymdir}

[Install]
WantedBy=default.target

